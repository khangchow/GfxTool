<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:weightSum="5">

    <ImageView
        android:id="@+id/iv_normal_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/active_mode"
        android:scaleType="fitXY"
        android:src="@drawable/ic_normal_mode" />

    <ImageView
        android:id="@+id/iv_game_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/inactive_mode"
        android:scaleType="fitXY"
        android:src="@drawable/ic_game_mode" />

    <ImageView
        android:id="@+id/iv_silent_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/inactive_mode"
        android:scaleType="fitXY"
        android:src="@drawable/ic_silent_mode" />

    <ImageView
        android:id="@+id/iv_boost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/feature_bg"
        android:scaleType="fitXY"
        android:src="@drawable/ic_boost" />

    <ImageView
        android:id="@+id/iv_clear_junk_notifications"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/feature_bg"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clear_junk_noti" />
</LinearLayout>