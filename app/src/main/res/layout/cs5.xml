<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imageview1"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:focusable="false"
            android:scaleType="centerInside"
            android:src="@drawable/logo"
            android:translationY="46dp" />

        <LinearLayout
            android:id="@+id/linear_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
         
            android:background="@drawable/bg_dialog_round"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="10dp"
                android:focusable="false"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="USING THIS FEATURE YOU WILL GET VIEW LIKE [ REAL I PAD ]\10\10NOTE:- \101:- I PAD VIEW IS NOT SHOWING IN ARENA MODE, LOBBY &amp; SPAWN ISLAND.\102:- I PAD VIEW SHOWING IN GAME AFTER JUMPING PARACHUTE.\10"
                android:textColor="@color/text_color"
                android:textSize="14sp"
                android:textStyle="normal" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_help5" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp"
                android:text="OK"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
