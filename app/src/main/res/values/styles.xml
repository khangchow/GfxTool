<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/base_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="askBottomShee" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="SpinnerStyle">
        <item name="colorControlNormal">#ff328add</item>
    </style>
    <style name="SpinnerStyleAdv">
        <item name="colorControlNormal">#00c853</item>
    </style>

    <style name="MyDialogFadeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="loading_app_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarThemeGreenWhite">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light">
    </style>

    <style name="textsizetoolbar">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="AppWidget.Seekbar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:maxHeight">15dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/backdrop_seekbar</item>
        <item name="android:progressDrawable">@drawable/backdrop_seekbar</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:thumb">@android:color/transparent</item>
    </style>


    <style name="ShapeAppearanceOverlay.CornerSize" parent="AppTheme.Main">
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogColor" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/base_color</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="NegativeButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="descriptionTextAds">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="headlineTextAds">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/headline_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="AdsAppTheme" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="bodyTextAds">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColor">@color/button_ads</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="buttonSettingAds">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ads_bg_lib</item>
        <item name="android:text">INSTALL</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="AppTheme.Ads" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@drawable/ic_ads</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">13.0px</item>
        <item name="android:minHeight">13.0px</item>
        <item name="android:text">AD</item>
    </style>
</resources>
